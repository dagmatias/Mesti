<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/degradado_pregunta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.miasteniagravis.project.matias.mesti.Presentacion2">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fondo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription=""
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        app:srcCompat="@drawable/mesti"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â¿Tienes"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miastenia"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gravis?"
        android:textColor="#ffffff"
        android:textSize="35sp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo"
        android:layout_marginTop="30dp"
        android:text="@string/nolose"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/button1" />

    <Button
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_redondo"
        android:layout_marginTop="21dp"
        android:text="@string/si"
        android:textColor="#ffffff"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:background="#FF1fe8af"
        app:srcCompat="?android:attr/actionModeCloseDrawable"
        android:layout_toStartOf="@+id/button"
        tools:ignore="ContentDescription" />
</RelativeLayout>
